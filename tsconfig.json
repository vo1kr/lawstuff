{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@commands/*": ["commands/*"],
      "@events/*": ["events/*"],
      "@services/*": ["services/*"],
      "@db/*": ["db/*"],
      "@utils/*": ["utils/*"],
      "@config": ["config"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
